<div class="card-container todo">
        <h3>To Do:</h3>
        {% for task in tasks %}
            {% if "No" in task.is_complete %}
        <div class="card">
            <button><i class="fa fa-check"></i></button>
            <p class="due {{ task.importance }}">{{ task.due_date }}</p>
            <p class="title">{{ task.name }}</p>
            <button class="to_complete"><i class="fa fa-trash"></i></button>
        </div>
        {% endif %}
    {% endfor %}
</div>

<div class="card-container done">
        <h3>Completed:</h3>
        {% for task in tasks %}
            {% if "No" in task.is_complete %}
        <div class="card">
            <button><i class="fa fa-check"></i></button>
            <p class="due-done">{{ task.due_date }}</p>
            <p class="title">{{ task.name }}</p>
            <button class="to_complete"><i class="fa fa-trash"></i></button>
        </div>
              {% endif %}
    {% endfor %}
</div>

{% endblock %}